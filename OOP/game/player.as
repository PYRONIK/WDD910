package  {	import flash.display.MovieClip;		import flash.ui.Keyboard; // für KEYBOARD-Bewegungen	import flash.events.KeyboardEvent; // für KEYBOARD-Bewegungen	import flash.events.Event; // für ENTER_FRAME u. ADDED_TO STAGE		import flash.display.Stage; // damit die Referenz auf die stage möglich ist	import flash.display.Loader; // zum Laden der Grafik	import flash.net.URLRequest; // zum laden der Grafik, genauer URL angeben		public class player extends MovieClip {		private var left:Boolean; // Variablen für Überprüfung ob gerade Links gedrückt wird		private var right:Boolean; // Variablen für Überprüfung ob gerade Rechts gedrückt wird		private var linkeTaste:String; // Die gerade gedrückte linke Taste		private var rechteTaste:String; // Die gerade gedrückte rechte Taste		private var tasteAlsString:String; // gedrückte Taste als String				public function player(spielerName:String) {			trace("Spieler initialisiert");						var imageLoader:Loader = new Loader(); // Loader Objekt instantiieren			var image:URLRequest = new URLRequest("players/"+spielerName+".gif"); //Spielername == Dateiname			imageLoader.load(image); // Bild hineinladen			addChild (imageLoader); // der displaylist des Spieler hinzufügen						addEventListener(Event.ENTER_FRAME, bewegung); // Damit die Bewegung möglich ist			addEventListener(Event.ADDED_TO_STAGE, aufStage); // Wird abgefeuert, sobald der Player auf der Stage ist		} //player		private function bewegung(e:Event):void {						if (left) {				trace("links");				this.x -=5;			}						if (right) {				trace("rechts");				this.x +=5;			}					} //bewegung				private function aufStage(e:Event):void {			 // Eventlistener erst hinzufügen, wenn der Player auch da ist (in displaylist)			stage.addEventListener(KeyboardEvent.KEY_DOWN, tasteAktiv); // wenn Taste gedrückt, bewegen möglich machen			stage.addEventListener(KeyboardEvent.KEY_UP, tasteInAktiv); // wenn nicht mehr gedrückt, bewegen nicht möglich machen			removeEventListener(Event.ADDED_TO_STAGE, aufStage); // brauch ma nimmer sobald der Player oben ist		} //aufStage				public function steuerung(links:String, rechts:String):void {			linkeTaste = links; //übernimmt den übergebenen buchstaben für die steuerung			rechteTaste = rechts; //übernimmt den übergebenen buchstaben für die steuerung		}				private function tasteAktiv(e:KeyboardEvent):void {			tasteAlsString = String.fromCharCode(e.charCode); //Wandelt den Tastencode in einen String um			switch (tasteAlsString) {				case linkeTaste:					left = true;					break;				case rechteTaste:						right = true;					break;			}		} // tastAktiv		private function tasteInAktiv(e:KeyboardEvent):void {						switch (String.fromCharCode(e.charCode)) {				case linkeTaste:					left = false;					break;				case rechteTaste:						right = false;					break;			}		} // tastInAktiv			} // player classe	} //package